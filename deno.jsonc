{
  "tasks": {
    "build": "silverbullet plug:compile -c deno.jsonc hello.plug.yaml",
    "watch": "silverbullet plug:compile -c deno.jsonc hello.plug.yaml -w"
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "exclude": [
      "*.md",
      "**/*.md",
      "*.plug.js"
    ]
  },
  "imports": {
    "$sb/": "https://deno.land/x/silverbullet/plug-api/"
  }
}
